
@model  List<Project01.VM.CartVM>

<h1>Order Conformation</h1>
<br />
<h2>Thank you for your shopping! Welcome back another day!</h2>


<div class="col-xs-12">
    <div class="col-xs-11"> </div>
    <div class="col-xs-1 text-danger btn-warning ">@Html.ActionLink("Exit Shop", "Exit", "Shop")  </div>
</div>

<h4>@ViewBag.Message</h4>

<br />
<hr />

<div class="col-xs-12">

    <div class="col-xs-3"> Name </div>
    <div class="col-xs-3"> Description </div>
    <div class="col-xs-3"> Price </div>
    <div class="col-xs-3"> Quantity </div>

</div>

<br />
<hr />

<div class="container" id="showPartial">

    @foreach (var item in Model)
    {
        Html.RenderAction("RenderOrderConfirm", "Shop", new { p = item });
    }

</div>



<br />

<div class="col-xs-12">
    <div class="col-xs-3"> </div>
    <div class="col-xs-3"> </div>
    <div class="col-xs-3">  @ViewBag.Total</div>
    <div class="col-xs-3"> </div>
</div>

<br />
<br />
<br />
<hr />

<div class="col-xs-12">
    <div class="col-xs-3">Order Address </div>
    <div class="col-xs-3"> </div>
    <div class="col-xs-3"> </div>
    <div class="col-xs-3"> </div>
</div>

<div class="col-xs-12">
    <div class="col-xs-3">@ViewBag.Name </div>
    <div class="col-xs-3"> @ViewBag.Email</div>
    <div class="col-xs-3"> </div>
    <div class="col-xs-3"> </div>
</div>

<div class="col-xs-12">
    <div class="col-xs-3">@ViewBag.City </div>
    <div class="col-xs-3">@ViewBag.PhoneNumber </div>
    <div class="col-xs-3"> </div>
    <div class="col-xs-3"> </div>
</div>

<div class="col-xs-12">
    <div class="col-xs-3">@ViewBag.Address </div>
    <div class="col-xs-3"> </div>
    <div class="col-xs-3"> </div>
    <div class="col-xs-3"> </div>
</div>

<div class="col-xs-12">
    <div class="col-xs-3">@ViewBag.Country </div>
    <div class="col-xs-3"> </div>
    <div class="col-xs-3"> </div>
    <div class="col-xs-3"> </div>
</div>

<br />
<br />
<br />
<hr />


<script src="~/Scripts/jquery-1.10.2.min.js"></script>
<script src="~/Scripts/jquery.validate.min.js"></script>
<script src="~/Scripts/jquery.validate.unobtrusive.min.js"></script>
<script src="~/scripts/bootstrap.min.js"></script>



